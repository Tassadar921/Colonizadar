{
    "name": "colonizadar-backend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "start": "node bin/server.js",
        "install:prod": "rm -rf node_modules && npm ci --omit=\"dev\"",
        "build": "cp -r build/static tmp_build_static && node ace build && cp -r static build && cp .env build/.env && cd build && npm run install:prod && pm2 stop colonizadar || true && pm2 delete colonizadar || true && pm2 start bin/server.js --name colonizadar && cd ../ && rsync -av --progress tmp_build_static/ build/static/ && rm -rf tmp_build_static",
        "dev": "node ace serve --hmr",
        "test": "node ace test"
    },
    "imports": {
        "#controllers/*": "./app/controllers/*.js",
        "#exceptions/*": "./app/exceptions/*.js",
        "#models/*": "./app/models/*.js",
        "#repositories/*": "./app/repositories/*.js",
        "#mails/*": "./app/mails/*.js",
        "#services/*": "./app/services/*.js",
        "#types/*": "./app/types/*.js",
        "#listeners/*": "./app/listeners/*.js",
        "#events/*": "./app/events/*.js",
        "#middleware/*": "./app/middleware/*.js",
        "#validators/*": "./app/validators/*.js",
        "#providers/*": "./providers/*.js",
        "#policies/*": "./app/policies/*.js",
        "#abilities/*": "./app/abilities/*.js",
        "#database/*": "./database/*.js",
        "#start/*": "./start/*.js",
        "#tests/*": "./tests/*.js",
        "#config/*": "./config/*.js"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.8.2",
        "@adonisjs/tsconfig": "^1.4.0",
        "@japa/api-client": "^3.1.0",
        "@japa/assert": "^4.0.1",
        "@japa/plugin-adonisjs": "^4.0.0",
        "@japa/runner": "^4.2.0",
        "@swc/core": "1.11.24",
        "@types/luxon": "^3.6.2",
        "@types/mime-types": "^2.1.4",
        "@types/node": "^22.15.18",
        "hot-hook": "^0.4.0",
        "pino-pretty": "^13.0.0",
        "ts-node-maintained": "^10.9.5"
    },
    "dependencies": {
        "@adonisjs/auth": "^9.4.0",
        "@adonisjs/cache": "^1.1.3",
        "@adonisjs/core": "^6.18.0",
        "@adonisjs/cors": "^2.2.1",
        "@adonisjs/lucid": "^21.6.1",
        "@adonisjs/redis": "^9.2.0",
        "@adonisjs/transmit": "^2.0.2",
        "@vinejs/vine": "^3.0.1",
        "luxon": "^3.6.1",
        "mime-types": "^3.0.1",
        "pg": "^8.16.0",
        "reflect-metadata": "^0.2.2"
    },
    "hotHook": {
        "boundaries": [
            "./app/controllers/**/*.ts",
            "./app/middleware/*.ts"
        ]
    },
    "overrides": {
        "strtok3": "8.0.1"
    }
}
