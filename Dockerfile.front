# Build stage
FROM node:22 AS builder
WORKDIR /app

COPY front/package*.json ./
RUN npm install

COPY front /app
RUN npm run build

# Serve stage
FROM node:22-slim
WORKDIR /app

RUN npm install -g serve

# ðŸ”¥ FIXED: copy from correct build dir (likely dist/)
COPY --from=builder /app/dist ./build

EXPOSE 4173

CMD ["serve", "-s", "build", "-l", "4173"]
